---
import challenges from '../data/challenges.json';
import SubmitCTA from './SubmitCTA.astro';

// Pass all challenges to the client - the active one will be determined client-side
const challengesData = JSON.stringify(challenges);
---

<div id="active-challenge" class="relative" data-challenges={challengesData}>
    <!-- Glow background -->
    <div class="absolute -inset-1 bg-gradient-to-r from-brand-purple to-brand-pink rounded-2xl blur opacity-20"></div>
    
    <div class="relative glass-panel rounded-xl overflow-hidden">
        <!-- Header Challenge -->
        <div class="p-8 border-b border-white/5 flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
            <div>
                <div class="flex items-center gap-3 mb-2">
                    <span class="bg-red-500/10 text-red-400 border border-red-500/20 text-xs px-2 py-0.5 rounded uppercase tracking-wider font-bold animate-pulse">Live</span>
                    <span id="challenge-tag" class="text-gray-500 text-sm font-mono">Chargement...</span>
                </div>
                <a id="challenge-link" href="#" class="group">
                    <h2 id="challenge-title" class="text-3xl font-bold text-white mb-2 group-hover:text-brand-purple transition inline-flex items-center gap-2">
                        Chargement...
                        <i class="fa-solid fa-arrow-right text-lg opacity-0 group-hover:opacity-100 group-hover:translate-x-1 transition-all"></i>
                    </h2>
                </a>
                <p id="challenge-description" class="text-gray-400 max-w-xl">
                    Chargement du d√©fi de la semaine...
                </p>
            </div>
            
            <!-- Timer Box -->
            <div class="bg-brand-surface rounded-lg p-4 border border-white/5 min-w-[200px] text-center mx-auto lg:mx-0">
                <p class="text-xs text-gray-500 uppercase tracking-wider mb-1">Temps restant</p>
                <div id="timer-val" class="text-2xl font-mono font-bold text-white">--j --h --m</div>
                <p id="end-date-display" class="text-xs text-brand-purple mt-1 font-medium capitalize">Fin: --</p>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 items-start">
            <!-- Left: Details & CTA -->
            <div class="lg:col-span-2 p-8 lg:border-r border-white/5 space-y-6">
                
                <!-- Stats Row -->
                <div class="flex items-center gap-8">
                    <div>
                        <p id="participant-count" class="text-2xl font-bold text-white">--</p>
                        <p class="text-sm text-gray-500">Participants</p>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-white">Stack</p>
                        <p class="text-sm text-gray-500">Libre</p>
                    </div>
                    <div>
                        <p class="text-2xl font-bold text-white">Niveau</p>
                        <p id="challenge-difficulty" class="text-sm text-brand-pink font-medium">--</p>
                    </div>
                </div>

                <!-- Brief -->
                <div class="prose prose-invert prose-sm max-w-none text-gray-400">
                    <h4 class="text-white font-heading">Le Brief</h4>
                    <p id="challenge-brief">Chargement...</p>
                </div>

                <!-- Specs Link (hidden by default, shown via JS if specsUrl exists) -->
                <a 
                    id="specs-link"
                    href="#"
                    target="_blank"
                    class="hidden items-center gap-3 px-5 py-3 rounded-lg bg-linear-to-r from-brand-purple/20 to-brand-pink/20 border border-brand-purple/30 hover:border-brand-purple/50 transition group"
                >
                    <i class="fa-solid fa-book text-brand-purple"></i>
                    <div>
                        <p class="text-white font-medium text-sm">üìñ Sp√©cifications compl√®tes</p>
                        <p class="text-gray-400 text-xs">Consultez le repo avec toutes les specs d√©taill√©es</p>
                    </div>
                    <i class="fa-solid fa-external-link-alt text-gray-500 group-hover:text-brand-purple transition ml-auto"></i>
                </a>

                <!-- Main CTA -->
                <SubmitCTA />
            </div>

            <!-- Right: Latest Submissions (List) -->
            <div class="p-8 bg-brand-surface/30">
                <div class="flex justify-between items-center mb-6">
                    <h3 class="font-bold text-white text-sm uppercase tracking-wide">Derniers ajouts</h3>
                    <button id="see-all-participants-btn" class="hidden text-xs text-brand-purple hover:text-white transition">Tout voir <span id="see-all-count"></span> &rarr;</button>
                </div>
                
                <div id="participants-list" class="space-y-4 min-h-[200px] flex flex-col justify-center">
                    <!-- Loading State -->
                    <div class="animate-pulse space-y-4">
                        <div class="flex items-center gap-3 p-3">
                            <div class="w-10 h-10 rounded-full bg-white/10"></div>
                            <div class="flex-1 space-y-2">
                                <div class="h-4 bg-white/10 rounded w-1/2"></div>
                                <div class="h-3 bg-white/5 rounded w-1/3"></div>
                            </div>
                        </div>
                        <div class="flex items-center gap-3 p-3">
                            <div class="w-10 h-10 rounded-full bg-white/10"></div>
                            <div class="flex-1 space-y-2">
                                <div class="h-4 bg-white/10 rounded w-1/2"></div>
                                <div class="h-3 bg-white/5 rounded w-1/3"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Community Engagement CTA -->
                <div class="mt-6 p-4 rounded-lg bg-gradient-to-br from-brand-purple/10 to-brand-pink/10 border border-brand-purple/20">
                    <div class="flex items-start gap-3">
                        <div class="text-brand-purple text-lg mt-0.5">
                            <i class="fa-solid fa-comments"></i>
                        </div>
                        <div>
                            <p class="text-white text-sm font-medium mb-1">üí¨ Commentez les solutions !</p>
                            <p class="text-gray-400 text-xs leading-relaxed">
                                Rejoignez la communaut√© en laissant des retours constructifs sur les issues des autres participants. C'est l'occasion d'apprendre et de partager vos id√©es !
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Participants Modal -->
<div id="participants-modal" class="fixed inset-0 z-[100] hidden" role="dialog" aria-modal="true">
    <div class="absolute inset-0 bg-[#0B0A16]/80 backdrop-blur-sm transition-opacity" aria-hidden="true"></div>
    <div class="fixed inset-0 flex items-center justify-center p-4">
        <div class="bg-[#1E1C2E] border border-white/10 w-full max-w-lg rounded-2xl p-6 shadow-2xl relative max-h-[80vh] flex flex-col">
            <div class="flex justify-between items-center mb-4">
                <h3 class="text-xl font-bold text-white">Tous les participants</h3>
                <button id="close-participants-modal-btn" class="text-gray-400 hover:text-white transition">
                    <i class="fa-solid fa-times"></i>
                </button>
            </div>
            <div id="modal-participants-list" class="overflow-y-auto flex-1 space-y-2 pr-2 custom-scrollbar">
                <!-- Populated via JS -->
            </div>
        </div>
    </div>
</div>

<script>
    import { getParticipants } from '../utils/github';

    // Store for current challenge data
    let currentChallenge: { id?: string; tag?: string; title?: string; endDate?: Date } = {};

    // Get active challenge from data - runs on every page load (client-side)
    function getActiveChallenge() {
        const container = document.getElementById('active-challenge');
        if (!container) return null;

        const challengesData = container.dataset.challenges;
        if (!challengesData) return null;

        try {
            const challenges = JSON.parse(challengesData);
            const now = new Date();

            const activeChallenge = challenges.map((c: any) => {
                const start = new Date(c.startDate.replace('Z', ''));
                const end = new Date(start);
                end.setDate(end.getDate() + 6); // Sunday to Saturday
                end.setHours(23, 59, 59, 999);
                return { ...c, startObj: start, endObj: end };
            }).find((c: any) => now >= c.startObj && now <= c.endObj);

            return activeChallenge || null;
        } catch (e) {
            console.error('Failed to parse challenges', e);
            return null;
        }
    }

    // Update DOM with active challenge data
    function updateChallengeUI() {
        const activeChallenge = getActiveChallenge();

        if (!activeChallenge) {
            // No active challenge found
            document.getElementById('challenge-tag')!.textContent = '#--';
            document.getElementById('challenge-title')!.textContent = 'Aucun d√©fi actif';
            document.getElementById('challenge-description')!.textContent = 'Revenez bient√¥t pour le prochain d√©fi !';
            document.getElementById('challenge-difficulty')!.textContent = '--';
            document.getElementById('challenge-brief')!.innerHTML = 'Aucun d√©fi en cours cette semaine.';
            return;
        }

        // Store for later use
        currentChallenge = {
            id: activeChallenge.id,
            tag: activeChallenge.tag,
            title: activeChallenge.title,
            endDate: activeChallenge.endObj
        };

        // Update DOM elements
        document.getElementById('challenge-tag')!.textContent = `#${activeChallenge.tag}`;
        const titleEl = document.getElementById('challenge-title')!;
        titleEl.innerHTML = `${activeChallenge.title} <i class="fa-solid fa-arrow-right text-lg opacity-0 group-hover:opacity-100 group-hover:translate-x-1 transition-all"></i>`;
        document.getElementById('challenge-description')!.textContent = activeChallenge.description;
        document.getElementById('challenge-difficulty')!.textContent = activeChallenge.difficulty;
        document.getElementById('challenge-brief')!.innerHTML = activeChallenge.brief;

        // Update the link to challenge page
        const challengeLink = document.getElementById('challenge-link') as HTMLAnchorElement;
        if (challengeLink) {
            challengeLink.href = `/challenge/${activeChallenge.id}`;
        }

        // Show specs link if available
        const specsLink = document.getElementById('specs-link') as HTMLAnchorElement;
        if (specsLink && activeChallenge.specsUrl) {
            specsLink.href = activeChallenge.specsUrl;
            specsLink.classList.remove('hidden');
            specsLink.classList.add('inline-flex');
        }

        // Format end date for display
        const formattedDate = new Intl.DateTimeFormat('fr-FR', {
            weekday: 'long',
            day: 'numeric',
            month: 'short',
            hour: 'numeric',
            minute: 'numeric'
        }).format(activeChallenge.endObj);
        document.getElementById('end-date-display')!.textContent = `Fin: ${formattedDate}`;

        // Start countdown
        updateCountdown();

        // Load participants
        initParticipants();
    }

    // Timer Logic
    function updateCountdown() {
        if (!currentChallenge.endDate) return;

        const deadline = currentChallenge.endDate;
        const now = new Date().getTime();
        const distance = deadline.getTime() - now;

        if (distance < 0) {
            const timerVal = document.getElementById('timer-val');
            if (timerVal) timerVal.innerText = "Termin√©";
            return;
        }

        const days = Math.floor(distance / (1000 * 60 * 60 * 24));
        const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        const seconds = Math.floor((distance % (1000 * 60)) / 1000);

        const timerVal = document.getElementById('timer-val');
        if (timerVal) {
            timerVal.innerText = `${days}j ${hours}h ${minutes}m ${seconds}s`;
        }
    }

    // Modal Logic
    const openBtn = document.querySelector('#active-challenge .submit-cta-btn');
    if (openBtn) {
        openBtn.addEventListener('click', () => {
            document.dispatchEvent(new CustomEvent('open-submission-modal', { 
                detail: { 
                    tag: currentChallenge.tag, 
                    title: currentChallenge.title 
                } 
            }));
        });
    }

    const participantsModal = document.getElementById('participants-modal');
    const seeAllBtn = document.getElementById('see-all-participants-btn');
    const closeParticipantsBtn = document.getElementById('close-participants-modal-btn');

    if (seeAllBtn && participantsModal) {
        seeAllBtn.addEventListener('click', (e) => {
            e.preventDefault();
            participantsModal.classList.remove('hidden');
        });
    }

    if (closeParticipantsBtn && participantsModal) {
        closeParticipantsBtn.addEventListener('click', () => {
            participantsModal.classList.add('hidden');
        });
    }

    if (participantsModal) {
        participantsModal.addEventListener('click', (e) => {
            if (e.target === participantsModal) {
                participantsModal.classList.add('hidden');
            }
        });
    }

    // Fetch Participants Logic
    async function initParticipants() {
        const tag = currentChallenge.tag;
        
        if (!tag) return;

        try {
            const participants = await getParticipants(tag);
            
            // Update Count
            const countEl = document.getElementById('participant-count');
            if (countEl) countEl.innerText = participants.length.toString();

            // Update List
            const listEl = document.getElementById('participants-list');
            if (listEl) {
                if (participants.length === 0) {
                    listEl.innerHTML = `
                        <div class="text-center py-8">
                            <p class="text-gray-400 text-sm mb-2">Aucune participation pour le moment.</p>
                            <button id="be-first-btn" class="text-brand-purple font-bold text-sm hover:underline cursor-pointer">Soyez le/la premi√®re dev ! üöÄ</button>
                        </div>
                    `;
                    
                    // Add event listener to the new button
                    const beFirstBtn = document.getElementById('be-first-btn');
                    if (beFirstBtn) {
                        beFirstBtn.addEventListener('click', () => {
                            document.dispatchEvent(new CustomEvent('open-submission-modal', { 
                                detail: { 
                                    tag: currentChallenge.tag, 
                                    title: currentChallenge.title 
                                } 
                            }));
                        });
                    }
                } else {
                    const displayed = participants.slice(0, 5);
                    const placeholderCard = displayed.length < 5 ? `
                        <div class="flex items-center gap-3 p-3 rounded-lg border border-white/5 opacity-30 blur-[1px] select-none">
                            <div class="w-10 h-10 rounded-full bg-white/10"></div>
                            <div class="flex-1 min-w-0 space-y-2">
                                <div class="h-4 bg-white/10 rounded w-24"></div>
                                <div class="h-3 bg-white/5 rounded w-16"></div>
                            </div>
                        </div>
                    ` : '';
                    
                    listEl.innerHTML = displayed.map((p, index) => `
                        <button class="active-solution-btn flex items-center gap-3 p-3 rounded-lg hover:bg-white/5 transition group cursor-pointer w-full text-left" data-index="${index}">
                            <img src="${p.avatarUrl}" loading="lazy" class="w-10 h-10 rounded-full border border-white/10" alt="Avatar de ${p.username}" />
                            <div class="flex-1 min-w-0">
                                <p class="text-sm font-medium text-white truncate">${p.username}</p>
                                <p class="text-xs text-gray-500 truncate">Voir la solution</p>
                            </div>
                            <div class="flex gap-2 opacity-50 group-hover:opacity-100 transition">
                                <i class="fa-solid fa-eye text-gray-400 group-hover:text-brand-purple"></i>
                            </div>
                        </button>
                    `).join('') + placeholderCard;

                    // Store participants for click handlers
                    (window as any).__activeParticipants = participants;

                    // Add click handlers
                    document.querySelectorAll('.active-solution-btn').forEach(btn => {
                        btn.addEventListener('click', () => {
                            const index = parseInt(btn.getAttribute('data-index') || '0');
                            const participant = (window as any).__activeParticipants[index];
                            document.dispatchEvent(new CustomEvent('open-solution-modal', { 
                                detail: { participant } 
                            }));
                        });
                    });
                }
            }

            // Update "See All" button
            if (participants.length > 5 && seeAllBtn) {
                seeAllBtn.classList.remove('hidden');
                const countSpan = document.getElementById('see-all-count');
                if (countSpan) countSpan.innerText = `(${participants.length})`;
            }

            // Update Modal List
            const modalListEl = document.getElementById('modal-participants-list');
            if (modalListEl) {
                modalListEl.innerHTML = participants.map((p, index) => `
                    <button class="modal-solution-btn flex items-center gap-3 p-3 rounded-lg hover:bg-white/5 transition w-full text-left" data-index="${index}">
                        <img src="${p.avatarUrl}" loading="lazy" class="w-10 h-10 rounded-full border border-white/10" alt="Avatar de ${p.username}" />
                        <div class="flex-1">
                            <p class="text-sm font-medium text-white">${p.username}</p>
                        </div>
                        <span class="text-brand-purple hover:text-white text-sm font-medium flex items-center gap-1">
                            Voir <i class="fa-solid fa-eye ml-1 text-xs"></i>
                        </span>
                    </button>
                `).join('');

                // Add click handlers for modal list
                document.querySelectorAll('.modal-solution-btn').forEach(btn => {
                    btn.addEventListener('click', () => {
                        // Close participants modal first
                        participantsModal?.classList.add('hidden');
                        
                        const index = parseInt(btn.getAttribute('data-index') || '0');
                        const participant = (window as any).__activeParticipants[index];
                        document.dispatchEvent(new CustomEvent('open-solution-modal', { 
                            detail: { participant } 
                        }));
                    });
                });
            }

        } catch (error) {
            console.error('Failed to load participants', error);
            const listEl = document.getElementById('participants-list');
            if (listEl) listEl.innerHTML = '<p class="text-red-400 text-xs text-center">Erreur de chargement</p>';
        }
    }

    // Initialize on page load
    updateChallengeUI();
    
    // Start countdown interval
    setInterval(updateCountdown, 1000);
</script>

<style>
    .custom-scrollbar::-webkit-scrollbar {
        width: 6px;
    }
    .custom-scrollbar::-webkit-scrollbar-track {
        background: rgba(255, 255, 255, 0.05);
        border-radius: 4px;
    }
    .custom-scrollbar::-webkit-scrollbar-thumb {
        background: rgba(255, 255, 255, 0.1);
        border-radius: 4px;
    }
    .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background: rgba(255, 255, 255, 0.2);
    }
</style>
