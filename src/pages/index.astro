---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import ActiveChallenge from '../components/ActiveChallenge.astro';
import Archive from '../components/Archive.astro';
import Footer from '../components/Footer.astro';
import SubmissionModal from '../components/SubmissionModal.astro';
---

<Layout title="DevChallenges - Master Your Craft">
	<!-- Navbar "Floating Island" Design -->
	<Navbar />

	<!-- Main Content -->
	<main
		class="flex-grow pt-32 pb-12 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto w-full space-y-20"
	>
		<!-- Hero Section -->
		<Hero />

		<!-- ACTIVE CHALLENGE SECTION (Feature Highlight) -->
		<ActiveChallenge />

		<!-- PAST PROJECTS GRID (Infinite Scroll Vibe) -->
		<Archive />
	</main>

	<!-- Footer avec CTA Idea -->
	<Footer />

	<!-- MODAL DE SOUMISSION -->
	<SubmissionModal />
</Layout>
